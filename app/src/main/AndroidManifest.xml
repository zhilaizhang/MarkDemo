<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zhangzhilai.markdemo" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MarkEditActivity"
            android:launchMode="singleTop"
            >
        </activity>
        <activity android:name=".Activity.ImageBucketChooseActivity"
            android:launchMode="singleTop"
            />
        <activity android:name=".Activity.ImageChooseActivity"
            android:launchMode="singleTop"
            />
        <activity android:name=".Activity.ImageZoomActivity"
            android:launchMode="singleTop"
            />
        <activity android:name=".Activity.PublishActivity"

            />
    </application>

</manifest>
